<h1>Listing Contacts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>Note</th>
    <th>Actions</th>
  </tr>

  <% @contacts.each do |contact| %>
      <tr>
        <td> <%= contact.name %> </td>
        <td> <%= contact.email %> </td>
        <td> <%= contact.mobile %> </td>
        <td> <%= contact.note %> </td>
        <td> <%= link_to "delete", admin_contact_path(current_user, contact), :method => :delete, :confirm => "Are you sure?", :title => "Delete Contact" %> </td>
      </tr>
  <% end %>
</table>

<%= link_to "New Contact", new_contact_path %>


<style type="text/css" media="screen">

    table{
        background: lightgrey;
        border-style: solid;
        border-width: 1;
        border-color: black;
    }

    th{
        background: grey;
        font-weight: bold;
        padding: 5px;
    }



    td{
        padding: 5px;
    }

    td.code{
        font-family: courier, courier-new, serif;
        font-weight: bold;
    }
</style>