<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12 page_header_div">
      <h1 class="page-header">Finance</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading finance_name">
          New <%= params[:type] %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <%= form_for [:admin, @finance] do |f| %>
                <%= render :partial => "form", :locals => {:f => f} %>
                <div class="actions">
                  <%= f.submit :class => "btn btn-primary" %>
                  <%= link_to "Cancel", admin_finances_path, :class => "btn btn-primary" %>
                </div>
            <% end %>
          </div>
          <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
      </div>
    </div>
  </div>
</div>


<script type="application/javascript">
    $(document).ready(function()
    {
        $("form").validator();
    })
</script>