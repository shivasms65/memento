<div id="page-wrapper">
<div class="row">
  <div class="col-lg-12 page_header_div">
    <h1 class="page-header">Contacts</h1>
    <%= link_to "New Contact", new_admin_contact_path, :class => "btn btn-primary new_contact_button" %>
    <%= link_to "Send Mail", send_mail_form_admin_contacts_path, :class => "btn btn-primary send_mail_to_contacts" %>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
<div class="col-lg-12">
<div class="panel panel-default">
<div class="panel-heading">
  All Contact Details
</div>
<!-- /.panel-heading -->
<div class="panel-body">
<div class="table-responsive">
<table class="table table-striped table-bordered table-hover" id="contact-table" data-source="<%= admin_contacts_path(format: :json) %>">
<thead>
<tr>
  <th>Name</th>
  <th>Org Name</th>
  <th>Type Of Org</th>
  <th>Email</th>
  <th>Mobile</th>
  <th>Type of Service</th>
  <th>Price Range</th>
  <th>Note</th>
  <th>test</th>
  <th>Process Line</th>
  <th>Remarks</th>
  <th class="contact-actions">Actions</th>
</tr>
</thead>
<tbody>

</tbody>
</table>
</div>
<!-- /.row -->
</div>
<!-- /#page-wrapper -->
</div>
</div>
</div>
</div>

<script type="application/javascript">
    var editor;

    $(document).ready(function() {
        $('#contact-table').dataTable({
            processing: true,
            serverSide: true,
            responsive: true,
            ajax: $('#contact-table').data('source'),
            pagingType: "full_numbers",
            fnDrawCallback: function( oSettings ) {
                $(".contact-actions").removeClass("sorting")
            }
        });

    });
</script>

<style type="text/css">
    .page_header_div h1
    {
        float: left;
    }
    .page_header_div .new_contact_button, .page_header_div .send_mail_to_contacts
    {
        float: right;
        margin: 48px 6px 0 0;
    }

</style>