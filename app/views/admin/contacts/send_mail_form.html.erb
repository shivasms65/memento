<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12 page_header_div">
      <h1 class="page-header">Contacts</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Send Mail to Contacts
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <%= form_for :mailer, :url => send_mail_to_contacts_admin_contacts_path do |f| %>
                  <div class="form-group">
                    <%= f.label :subject %>
                    <%= f.text_field :subject, :class => "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :body %>
                    <%= f.text_area :body, :class => "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :upload_file %>
                    <%= f.file_field :file, :class => "" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :process_line %>
                    <%= f.select :process_line, options_for_select(@process_lines), {}, {:class => "form-control"} %>
                  </div>

                  <div class="actions">
                    <%= f.submit "Send Mail", :class => "btn btn-primary" %>
                    <%= link_to "Cancel", admin_contacts_path, :class => "btn btn-primary" %>
                  </div>
              <% end %>
            </div>
          </div>
          <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
      </div>
    </div>
  </div>
</div>


<script type="application/javascript">
  $(document).ready(function()
  {
      $("form").submit(function()
      {
          if ($("#mailer_file").val() == "")
          {
              $("#mailer_file").parent().addClass("has-error")
              $("#mailer_file").siblings().addClass("control-label")
              return false;
          }
      })
  })
</script>