<h1> Listing users </h1>

<table>
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th colspan="2">Actions</th>
  </tr>

<% @users.each do |user| %>
    <tr>
      <td> <%= user.email %> </td>
      <td> <%= user.role %> </td>
      <td> <%= link_to "Edit", edit_admin_user_path(current_user, user) if can? :update, user  %> </td>
      <td> <%= link_to "delete", admin_user_path(current_user, user), :method => :delete, :confirm => "Are you sure?", :title => "Delete user" if can? :destroy, user %> </td>
    </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_admin_user_path %>
<%= link_to 'Admin Page', admins_path %>



