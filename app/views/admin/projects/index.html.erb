        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="finance-table">
              <thead>
              <tr>
                <th>Name</th>
                <th>Process Line</th>
                <th>Effective Date</th>
                <th>Exp End Date</th>
                <th>Meeting</th>
                <th>Remarks</th>
                <th class="project-actions">Actions</th>
              </tr>
              </thead>
              <tbody>
              <% @projects.each do |project| %>
                  <tr>
                    <td><%= project.name %></td>
                    <td><%= project.process_line %></td>
                    <td><%= project.effective_date.blank? ? "" : project.effective_date.strftime("%d %b %Y") %></td>
                    <td><%= project.expected_end_date.blank? ? "" : project.expected_end_date.strftime("%d %b %Y") %></td>
                    <td><%= project.meeting_time.blank? ? "" : project.meeting_time.strftime("%d %b %Y %l:%M %p") %></td>
                    <td><%= project.remarks %></td>
                    <td><%= link_to("Edit", edit_admin_project_path(project)) %> | <%= link_to("Destroy",admin_project_path(project), :method => "delete") %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
